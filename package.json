{
    "name": "Weather-Forecast",
    "version": "1.0.0",
    "description": "Weather Forecast REST API",
    "main": "dist/main.js",
    "scripts": {
        "build": "cp -R .env.development .env && tsc",
        "build:staging": "cp -R .env.staging .env && tsc",
        "build:prod": "cp -R .env.production .env && tsc",
        "dev": "npm run build && npm run copy && cross-env DOTENV_CONFIG_PATH=.env.development npm start",
        "start": "node -r dotenv/config .",
        "copy": "cp -R ./Database ./dist"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "async": "^3.2.4",
        "axios": "^0.27.2",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "env-cmd": "^10.1.0",
        "express": "^4.17.1",
        "fs": "*",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.29.4",
        "mysql2": "^2.3.2",
        "winston-cloudwatch": "^6.1.1"
    },
    "devDependencies": {
        "@types/async": "^3.2.18",
        "@types/cookie-parser": "^1.4.4",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/uuid": "^9.0.1",
        "cross-env": "^7.0.3",
        "prettier": "2.4.1",
        "typescript": "^4.4.4"
    },
    "engines": {
        "node": "=14.21.3"
    }
}
